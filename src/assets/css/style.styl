html, body 
	position relative
	height 100%
	font-family font-family
	-webkit-font-smoothing antialiased
	overflow hidden
	background #9b9b9b

p, ul
	color #fff
	padding 1em

ul
	padding .5em 1em

img
	max-width 100%

h2
	font-size 1.5em
	color #ff0
	padding 1rem

a
	color #ff0
	&:visited
		color #ff0
	
#home
	background #9b9b9b

#about
	background #878787

#portfolio
	background #747474

#contact
	background #606060

.slide
	width 25%
	min-height 100%
	float left
	transition width 1s ease
	position relative

	&.inactive
		width 3.3%
	&.active
		width 90%
.content
	opacity 0
	transition opacity 0.5s ease
	cursor default

	&.active
		opacity 1
		cursor text

.wrapper
	width 90%
	height 500px
	margin 30px auto
	background rgba(0,0,0,0.2)
	overflow hidden
	position relative

.icon
	width 20px
	margin 10px

.myScrollbarV
	position absolute
	z-index 100
	width 13px 
	bottom 7px 
	top:2px 
	right 1px
	background rgba(0,0,0,0.5)

.myScrollbarV > div
	position absolute
	z-index 100
	width 100%
	background #fff